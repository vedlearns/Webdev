  <body>
    <%-include('partials/header')%>
    <header><h1 class="bg-green-500 text-2xl ">Register your home here</h1></header>
    <main>
      <form action="/host/add-home" method="POST">
        <input
          type="text"
          name="houseName"
          placeholder="Enter the name of your House"
        />
        <input
          type="text"
          name="price"
          placeholder="Price per Night"
        />
        <input
          type="text"
          name="location"
          placeholder="Enter the name of your House"
        />
        <input
          type="text"
          name="rating"
