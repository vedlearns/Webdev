<%- include('partials/head')%>
</head>
<body class="bg-gray-100 text-gray-900">
  <%- include('partials/header')%>
  <header class="bg-red-500 text-white py-6 text-center shadow-md">
    <h1 class="text-4xl font-bold uppercase tracking-wide">Welcome to Airbnb</h1>
  </header>
  <main class="max-w-4xl mx-auto mt-10 p-6">
    <div class="text-right mb-4">
      <a href="/host/add-home" class="bg-red-500 text-white px-5 py-2 rounded-md text-lg font-semibold hover:bg-red-600">Add Home</a>
    </div>
    <div class="bg-white p-6 rounded-lg shadow-lg">
      <ul class="space-y-4">
        <% registeredHouse.forEach(home => { %>
        <li class="p-4 border-b flex flex-col md:flex-row justify-between items-center">
          <span class="font-semibold text-lg">Name: <%= home.houseName %></span>
          <span class="text-gray-700">Price: $<%= home.price %>/night</span>
          <span class="text-gray-700">Location: <%= home.location %></span>
          <span class="text-yellow-500 font-bold">Rating: <%= home.rating %> â˜…</span>
        </li>
        <% }) %>
      </ul>
    </div>
  </main>
</body>
</html>